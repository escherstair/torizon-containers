ARG BASE_IMAGE_NAME
ARG BASE_IMAGE_NAME_DEBUG
ARG IMAGE_TAG
ARG REGISTRY
ARG REGISTRY_NAMESPACE

FROM $REGISTRY/$REGISTRY_NAMESPACE/$BASE_IMAGE_NAME_DEBUG:$IMAGE_TAG AS dotnet-debug

FROM $REGISTRY/$REGISTRY_NAMESPACE/$BASE_IMAGE_NAME:$IMAGE_TAG AS dotnet-wayland

COPY --from=dotnet-debug /vsdbg /vsdbg
